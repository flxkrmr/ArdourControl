            <solid android:color="#58857e"/>
        </shape>
    </item>
    -->
    <!-- idle state -->
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1.3dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/default_grey" android:endColor="@color/dark_grey" />
        </shape>
    </item>
</selector>